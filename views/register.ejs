<%- include('includes/header') -%>
<div class="register-form-wrapper">
  <div>
    <div class="form-header-wrapper">
      <h1 class="form-header">Welcome to our platform!</h1>
    </div>
    <form method="POST" class="register-form">
      <div class="form-group">
        <label>Username</label>
        <input name="username" type="text" class="form-control">
      </div>
      <div class="form-group">
        <label>Email address</label>
        <input name="email" type="text" class="form-control">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input name="password" type="password" class="form-control">
      </div>
      <div class="form-group">
        <label>Password Confirmation</label>
        <input name="passwordconf" type="password" class="form-control">
      </div>
      <small class="haveaccount">
        Do not have an account? <a href="/login">Login</a>
        <br>
      </small>
      <% if (errors && errors.length> 0) { %>
        <div class="alert alert-danger" role="alert">
          <% errors.forEach(error=> { %>
            * <%= error.msg %>
              <br>
              <% }) %>
        </div>
      <% } %>
      <button type="submit" class="btn btn-primary regiser-btn">Register</button>
    </form>
  </div>
</div>
<%- include('includes/footer') -%>
