        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="../public/style.css">

    <% if (successMessage) { %>
        <div id="baseAlert" class="alert alert-success">
            <%= successMessage %>
        </div>
    <% } %>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var alertElement = document.getElementById("baseAlert");

            function hideAlert() {
                alertElement.style.display = "none";
            }

            setTimeout(hideAlert, 2500);

        });
        console.log('Hello')
    </script>
    <style>
        #baseAlert {
            min-width: 259px;
            padding: 0 !important;
            padding-left: 5px !important;
            padding-right: 5px !important;
            padding-top: 10px !important;
            position: fixed;
            top: 16px;
            right: 20px;
            z-index: 1000;
            font-size: 15px;
            font-weight: 700;
            height: 43px !important;
        }
    </style>

    <body class="w-screen h-screen p-10 space-x-6">
        <aside class="left-aside">
            <!-- Component Start -->
            <div
                class="myleftaside flex flex-col items-center w-60 h-full overflow-hidden text-gray-700 bg-gray-100 rounded">
                <a class="flex items-center w-full px-3 mt-3" href="#">
                    <svg class="w-8 h-8 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                        fill="currentColor">
                        <path
                            d="M11 17a1 1 0 001.447.894l4-2A1 1 0 0017 15V9.236a1 1 0 00-1.447-.894l-4 2a1 1 0 00-.553.894V17zM15.211 6.276a1 1 0 000-1.788l-4.764-2.382a1 1 0 00-.894 0L4.789 4.488a1 1 0 000 1.788l4.764 2.382a1 1 0 00.894 0l4.764-2.382zM4.447 8.342A1 1 0 003 9.236V15a1 1 0 00.553.894l4 2A1 1 0 009 17v-5.764a1 1 0 00-.553-.894l-4-2z" />
                    </svg>
                    <span class="ml-2 text-sm font-bold">My Medium</span>
                </a>
                <div class="w-full px-2">
                    <div class="flex flex-col items-center w-full mt-3 border-t border-gray-300">
                        <a class="flex items-center w-full h-12 px-3 mt-2 rounded bg-gray-300 " href="/">
                            <svg class="w-6 h-6 stroke-current" xmlns="http://www.w3.org/2000/svg" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                            <span class="ml-2 text-sm font-medium">Recend Mediums</span>
                        </a>
                        <a class="flex items-center w-full h-12 px-3 mt-2 rounded hover:bg-gray-300" href="/saved-mediums/<%= user.id %>">
                            <i class="stroke-current aside-icons fa-regular fa-bookmark"></i>
                            <span class="ml-2 text-sm font-medium">Saved</span>
                        </a>
                        <!-- Add an onclick attribute to trigger the JavaScript function -->
                        <a class="flex items-center w-full h-12 px-3 mt-2 rounded hover:bg-gray-300"
                            onclick="togglePremium(<%= user.id %>)">
                            <i class="stroke-current aside-icons fa-solid fa-crown"></i>
                            <span class="ml-2 text-sm font-medium">Go Premium</span>
                        </a>

                        <% if (user.is_admin) { %>
                            <a class="flex items-center w-full h-12 px-3 mt-2 rounded hover:bg-gray-300" href="/users">
                                <i class="stroke-current aside-icons fa-solid fa-users"></i>
                                <span class="ml-2 text-sm font-medium">Users Table</span>
                            </a>
                        <% } %>

                        <a class="flex items-center w-full h-12 px-3 mt-2 rounded hover:bg-gray-300" href="/logout">
                            <i class="stroke-current aside-icons fa-solid fa-arrow-right-from-bracket"></i>
                            <span class="ml-2 text-sm font-medium">Log Out</span>
                        </a>

                        <script>
                            // Define the JavaScript function to toggle premium status
                            async function togglePremium(userid) {
                                try {
                                    // Make a POST request using the Fetch API
                                    await fetch(`/toggle-premium/${userid}`, {
                                        method: 'POST',
                                    });

                                    // Reload the page after the POST request is complete
                                    location.reload();
                                } catch (error) {
                                    console.error('Error toggling premium status:', error.message);
                                }
                            }
                        </script>

                    </div>
                </div>
                <a class="flex items-center justify-center w-full h-16 mt-auto bg-gray-200 hover:bg-gray-300"
                    href="#">
                    <% if (user.is_premium) { %>
                        <i class="premium-icon fa-solid fa-crown"></i>
                        <% } %>
                            <svg class="w-6 h-6 stroke-current" xmlns="http://www.w3.org/2000/svg" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span class="ml-2 text-sm font-medium">
                                <%= user.username %>
                            </span>
                </a>
            </div>
            <!-- Component End  -->
        </aside>

        <aside class="right-aside">
            <form method="POST">
                <h1 class="form-header">Post a New Medium Here!</h1>
                <div class="form-group">
                    <label> Medium Title </label>
                    <input name="title" type="text" class="form-control" placeholder="My firs medium ... ">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Medium Content</label>
                    <textarea name="content" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-check">
                    <input name="is_premium" type="checkbox" class="form-check-input">
                    <label class="form-check-label">This is premium Medium</label>
                </div>
                <% if (errors && errors.length> 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <% errors.forEach(error=> { %>
                            * <%= error.msg %>
                                <br>
                                <% }) %>
                    </div>
                    <% } %>
                        <button type="submit" class="med-form-btn btn btn-primary regiser-btn">
                            Post Your Medium
                            <i class="medium-send fa-solid fa-paper-plane"></i>
                        </button>
            </form>
        </aside>

        <main>
            <% mediums.forEach(medium=> { %>
                <div class="medium-card">
                    <div class="medium-username-title">
                        <h1>
                            <%= medium.username %>:
                        </h1>
                        <h1 class="medium-title">
                            <% if (medium.is_premium) { %>
                                <i class="premium-icon fa-solid fa-crown"></i>
                                <% } %>
                                    <%= medium.title %>
                        </h1>
                    </div>
                    <div class="medium-content">
                        <%= medium.content %>
                    </div>
                    <div class="medium-footer">
                        <div class="medium-links">
                            <a onclick="addMedium(<%= user.id %>,<%= medium.id %>)">
                                <i class="medium-icons fa-solid fa-bookmark"></i>
                            </a>
                        </div>
                        <div class="medium-date">
                            Date posted: <%= medium.posted_datetime %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </main>
    </body>


    <script>
        // Define the JavaScript function to toggle premium status
        async function addMedium(userid, mediumid) {
            try {
                // Make a POST request using the Fetch API
                await fetch(`/add-medium/${userid}/${mediumid}`, {
                    method: 'POST',
                });

                // Reload the page after the POST request is complete
                location.reload();
            } catch (error) {
                console.error('Error toggling premium status:', error.message);
            }
        }
    </script>